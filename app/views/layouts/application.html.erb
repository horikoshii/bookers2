<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<body>
 <header class="bg-dark text-white">
  <nav class="navbar navbar-expand-lg navbar-light">
   <div class="container">
    <a class="navbar-brand p-3" href="/"><%= link_to "Bookers", top_path, class: 'nav-link text-white' %></a>
     <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
     </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
       <ul class="navbar-nav ml-auto">

    <% if user_signed_in? %>

      <li class="nav-item">
      <%= link_to(top_path, class: 'nav-link text-white') do %>
       <strong><i class="fa-regular fa-house-user"></i><span> Home </span></strong>
      <% end %>
      </li>

      <li class="nav-item">
      <%= link_to(users_path, class: 'nav-link text-white') do %>
       <strong><i class="fa-regular fa-user"></i><span> User </span></strong>
      <% end %>
      </li>

      <li class="nav-item">
      <%= link_to(books_path, class: 'nav-link text-white') do %>
       <strong><i class="fa-regular fa-book"></i><span>Books</span></strong>
      <% end %>
      </li>

      <li class="nav-item">
      <%= link_to(destroy_user_session_path, method: :delete, class: 'nav-link text-white') do %>
      <strong><i class="fa-solid fa-right-from-bracket"></i><span> Log out </span></strong>
      <% end %>
      </li>

    <% else %>

      <li class="nav-item">
      <%= link_to(top_path, class: 'nav-link text-white') do %>
       <strong><i class="fa-regular fa-house-user"></i><span> Home </span></strong>
      <% end %>
      </li>

      <li class="nav-item">
      <%= link_to(about_path, class: 'nav-link text-white') do %>
      <strong><i class="fa-solid fa-link"></i><span> About </span></strong>
      <% end %>
      </li>

      <li class="nav-item">
      <%= link_to(new_user_registration_path, class: 'nav-link text-white') do %>
      <strong><i class="fa-solid fa-user-plus"></i><span> Sign up </span></strong>
      <% end %>
      </li>

      <li class="nav-item">
      <%= link_to(user_session_path, class: 'nav-link text-white') do %>
      <strong><i class="fa-solid fa-right-to-bracket"></i><span> Log in </span></strong>
      <% end %>
      </li>

    <% end %>
      </ul>
     </div>
    </div>
   </nav>
  </header>
  <%= yield %>
  
  <footer>
  <div class="container mt-5">
  	<div class="row">
    	<div class="mx-auto">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>
</html>
