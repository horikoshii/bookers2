 <div class="container">
  <div class="row">
    <div class="col-lg-4" style="background-color: orange;">
      <h2>User info</h2>
       <table class="table table-striped">
        <thead>
         <tr>
          <th>name</th>
         </tr>
        </thead>
        <tbody>
         <tr>
          <td>introduction</td>
         </tr>
        </tbody>
       </table>
    </div>

    <div class="col-lg-8">
      <h2>Books</h2>
      <table class="table table-striped">
        <thead>
         <tr>
           <th></th>
          <th>Title</th>
          <th>Opinion</th>
         </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>

        <tr>
         <td><%= image_tag book.user.get_profile_image(100,100) %></td>
         <td><%= link_to book.title,book_path(book.id) %></td>
         <td><%= book.body %></td>
        </tr>
        <% end %>
        </tbody>
       </table>
    </div>
  </div>
</div>

<%= render 'books', book: @book %>