<div class="container">
  <div class="row">

    <div class="col-lg-4" style="background-color: orange;">
      <h2>User info</h2>
       <table class="table table-striped">
        <thead>
         <tr>
          <th>name</th>
         </tr>
        </thead>
        <tbody>
         <tr>
          <td>introduction</td>
         </tr>
        </tbody>
       </table>
    </div>

    <div class="col-lg-8">
      <h2>Books</h2>
      <table class="table table-striped">
        <thead>
         <tr>
           <th></th>
          <th>Title</th>
          <th>Opinion</th>
         </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>

        <tr>
         <td><%= image_tag book.user.get_profile_image(100,100) %></td>
         <td><%= book.title %></td>
         <td><%= book.body %></td>
        </tr>
        <% end %>
        </tbody>
       </table>
    </div>
  </div>
</div>

<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>

    <h4>Opinion</h4>
      <%= f.text_area :body %>
      <%= f.submit '投稿' %>
    <%= link_to '投稿', books_path, class: "btn btn-secondary" %>
  <% end %>