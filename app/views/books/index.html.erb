<div class="container">
  <div class="row">

    <div class="col-lg-4" style="background-color: orange;">
      <h2>User info</h2>
       <table class="table table-striped">
        <thead>
         <tr>
          <th>name</th>
         </tr>
        </thead>
        <tbody>
         <tr>
          <td>introduction</td>
         </tr>
        </tbody>
       </table>
    </div>

    <div class="col-lg-8">
      <h2>Books</h2>
      <table class="table table-striped">
        <thead>
         <tr>
          <th>Title</th>
          <td>Opinion</td>
         </tr>
        </thead>
        <% @books.each do |book| %>
        <span><%= book.title %></span>
          
        <% end %>
        <tbody>
         <tr>
          <td>Opinion</td>
         </tr>
        </tbody>
       </table>
    </div>
  </div>
</div>

<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>

    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit '投稿' %>
    <%= link_to '投稿', new_book_path, class: "btn btn-secondary" %>
  <% end %>