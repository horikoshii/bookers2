<% if flash[:notice] %>
  <p id="notice">
   <%= flash[:notice] %>
  </p>
 <% end %>

<%= render 'users/user', users: @user %>

<%= render 'books', book: @book %>


 <div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
   <table class="table table-striped">
    <thead>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th></th>
      <th></th>
     </tr>
    </thead>
    <tbody>
     <tr>
      <td>
       <%= link_to user_path(@user.id) do %>
       <%= image_tag @books.user.get_profile_image(100,100) %>
       <% end %><br>
       <%= link_to @books.user.name,user_path(@user.id) %>
      </td>
      <td><%= link_to @books.title,book_path(@books.id) %></td>
      <td><%= @books.body %></td>
      <td>
      <% if @books.user.id == current_user.id %>
      <%= link_to "Edit",edit_book_path(@books.id), class:"btn btn-sm btn-success" %>
      <% end %>
      </td>
      <td>
      <% if @books.user.id == current_user.id %>
       <%= link_to 'Destroy', book_path(@books.id), class:"btn btn-sm btn-danger", method: :delete,"data-confirm" => "本当に削除しますか？" %>
      <% end %>
      </td>
     </tr>
    </tbody>
   </table>
  </div>
 </div>
</div>