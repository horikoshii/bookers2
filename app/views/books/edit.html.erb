<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
<%= form_with model: @book do |f| %>
<div class="form-group">
  <label for="inputTitle">Title</label><br>
  <%= f.text_field :title, autofocus: true, id:"inputTitle",placeholder:"Title" %>
</div>
<div class="form-group">
  <label for="inputOpinion">Opinion</label><br>
  <%= f.text_field :body, autofocus: true, id:"inputOpinion",placeholder:"Opinion" %>
</div>
<div class="form-group">
  <%= f.submit"Update Book" %>
</div>
<% end %>

<p>
<%= link_to "show",book_path %>
|
<%= link_to "back",books_path %>
</p>
    </div>
  </div>
</div>